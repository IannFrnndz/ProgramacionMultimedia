<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="409dp"
        android:layout_height="394dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button7"
                style="@style/Widget.Material3.Button"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:backgroundTint="#677DFF"
                android:text="7"
                android:textAlignment="center"
                android:textSize="34sp" />

            <Button
                android:id="@+id/button8"
                style="@style/Widget.Material3.Button"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:backgroundTint="#677DFF"
                android:text="8"
                android:textAlignment="center"
                android:textSize="34sp" />

            <Button
                android:id="@+id/button9"
                style="@style/Widget.Material3.Button"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:backgroundTint="#677DFF"
                android:text="9"
                android:textAlignment="center"
                android:textSize="34sp" />

            <Button
                android:id="@+id/buttonDividir"
                style="@style/Widget.Material3.Button"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:backgroundTint="#FABD75"
                android:text="/"
                android:textAlignment="center"
                android:textSize="34sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="99dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button4"
                style="@style/Widget.Material3.Button"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:backgroundTint="#677DFF"
                android:text="4"
                android:textAlignment="center"
                android:textSize="34sp" />

            <Button
                android:id="@+id/button5"
                style="@style/Widget.Material3.Button"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:backgroundTint="#677DFF"
                android:text="5"
                android:textAlignment="center"
                android:textSize="34sp" />

            <Button
                android:id="@+id/button6"
                style="@style/Widget.Material3.Button"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:backgroundTint="#677DFF"
                android:text="6"
                android:textAlignment="center"
                android:textSize="34sp" />

            <Button
                android:id="@+id/buttonMenos"
                style="@style/Widget.Material3.Button"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:backgroundTint="#FABD75"
                android:text="-"
                android:textAlignment="center"
                android:textSize="34sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button1"
                style="@style/Widget.Material3.Button"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:backgroundTint="#677DFF"
                android:text="1"
                android:textAlignment="center"
                android:textSize="34sp" />

            <Button
                android:id="@+id/button2"
                style="@style/Widget.Material3.Button"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:backgroundTint="#677DFF"
                android:text="2"
                android:textAlignment="center"
                android:textSize="34sp" />

            <Button
                android:id="@+id/button3"
                style="@style/Widget.Material3.Button"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:backgroundTint="#677DFF"
                android:text="3"
                android:textAlignment="center"
                android:textSize="34sp" />

            <Button
                android:id="@+id/buttonMas"
                style="@style/Widget.Material3.Button"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:backgroundTint="#FABD75"
                android:text="+"
                android:textAlignment="center"
                android:textSize="34sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="102dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonC"
                style="@style/Widget.Material3.Button"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:backgroundTint="#8BC34A"
                android:text="C"
                android:textAlignment="center"
                android:textSize="25sp"
                app:strokeColor="#E81212" />

            <Button
                android:id="@+id/button0"
                style="@style/Widget.Material3.Button"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:backgroundTint="#677DFF"
                android:text="0"
                android:textAlignment="center"
                android:textSize="34sp" />

            <Button
                android:id="@+id/buttonPunto"
                style="@style/Widget.Material3.Button"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:backgroundTint="#767993"
                android:text="."
                android:textAlignment="center"
                android:textSize="34sp" />

            <Button
                android:id="@+id/buttonIgual"
                style="@style/Widget.Material3.Button"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:backgroundTint="#FD7070"
                android:text="="
                android:textAlignment="center"
                android:textSize="34sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="303dp"
        android:layout_marginTop="114dp"
        android:layout_marginBottom="80dp"
        android:foregroundTint="#000000"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>